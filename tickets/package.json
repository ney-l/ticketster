{
  "name": "tk-tickets",
  "version": "1.0.0",
  "description": "Ticket Microservice for Ticketster App",
  "scripts": {
    "start": "ts-node-dev -r tsconfig-paths/register src/index.ts",
    "docker:build": "docker build -t neylanjewar/tk-tickets .",
    "docker:push": "docker push neylanjewar/tk-tickets",
    "lint": "eslint src/**/*.ts",
    "format:check": "prettier src",
    "format:fix": "prettier src --write",
    "test": "jest --watchAll --no-cache",
    "test:ci": "jest --no-cache"
  },
  "dependencies": {
    "@ticketster/common": "^1.5.0",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
